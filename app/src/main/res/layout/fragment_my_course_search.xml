<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="edu.temple.tuhub.MyCourseSearchFragment">


    <EditText
        android:id="@+id/myCoursesSearchEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Search your courses..."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnMyCourseSearch"/>

    <Button
        android:id="@+id/btnMyCourseSearch"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:background="#990033"
        android:text="Search"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/myCourseSearchList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myCoursesSearchEditText"/>

</RelativeLayout>
